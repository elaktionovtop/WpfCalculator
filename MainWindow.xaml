<Window x:Class="Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Калькулятор" Height="400" Width="600"
        MinHeight="300" MinWidth="450"
        Background="#f0f2f5">
        <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBox x:Name="op1" Grid.Row="0" Text="0" 
                     VerticalContentAlignment="Center"
                     HorizontalContentAlignment="Center"
                     FontSize="24" FontWeight="Bold"/>
            <TextBox x:Name="op2" Grid.Row="1" Text="0"                      
                     VerticalContentAlignment="Center"
                     HorizontalContentAlignment="Center"
                     FontSize="24" FontWeight="Bold"/>

            <TextBox x:Name="res" Grid.Row="2" IsReadOnly="True" 
                     VerticalContentAlignment="Center"
                     HorizontalContentAlignment="Center"
                     FontSize="24" FontWeight="Bold"/>
        </Grid>

        <UniformGrid Grid.Column="1" Rows="3" Columns="2">
            <Button x:Name="add" Click="Oper">
                <Image Source="pack://application:,,,/pictures/add.png" Stretch="Fill" />
            </Button>
            <Button x:Name="sub" Click="Oper">
                <Image Source="pack://application:,,,/pictures/subtract.png" Stretch="Fill" />
            </Button>
            <Button x:Name="mul" Click="Oper">
                <Image Source="pack://application:,,,/pictures/multiply.png" Stretch="Fill" />
            </Button>
            <Button x:Name="div" Click="Oper">
                <Image Source="pack://application:,,,/pictures/divide.png" Stretch="Fill" />
            </Button>
            <Button x:Name="next" Click="CopyResult">
                <Image Source="pack://application:,,,/pictures/next.png" Stretch="Fill" />
            </Button>
            <Button x:Name="clear" Click="Clear">
                <Image Source="pack://application:,,,/pictures/clear.png" Stretch="Fill" />
            </Button>
        </UniformGrid>
    </Grid>
</Window>

