<Window x:Class="Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        
        Title="Калькулятор" Height="400" Width="600"
        MinWidth="600" MinHeight="350"
        MaxWidth="900" MaxHeight="700"
        Background="#f0f2f5">
    
    <Window.Resources>

        <!-- Стиль для TextBox -->
        <Style TargetType="TextBox">
            <!--<Setter Property="Width" Value="220"/>-->
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="20"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="TextAlignment" Value="Right"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#c0c5cc"/>
            <Setter Property="BorderThickness" Value="5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Стиль для кнопок -->
        <Style TargetType="Button">
            <!--<Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="80"/>-->
            <Setter Property="MaxWidth" Value="100"/>
            <Setter Property="MaxHeight" Value="100"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="#4A6FA5"/>
            <Setter Property="BorderBrush" Value="#2E4C78"/>
            <Setter Property="BorderThickness" Value="5"/>
            <Setter Property="Opacity" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="20"
                        SnapsToDevicePixels="True"
                        Padding="15">
                            <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <!-- Тень -->
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="6"
                              ShadowDepth="3"
                              Color="#333333"
                              Opacity="0.4"/>
                </Setter.Value>
            </Setter>

            <!-- Наведение -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#6E95C4"/>
                    <Setter Property="BorderBrush" Value="#3B6AA5"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#355B89"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!--<TextBox x:Name="op1" Grid.Row="0" Text="0"/>
            <TextBox x:Name="op2" Grid.Row="1" Text="0"/>
            <TextBox x:Name="res" Grid.Row="2" IsReadOnly="True"/>-->
            <TextBox Grid.Row="0"
                     Text="{Binding Operand1, UpdateSourceTrigger=PropertyChanged}" />
            <TextBox Grid.Row="1"
                     Text="{Binding Operand2, UpdateSourceTrigger=PropertyChanged}" />
            <TextBox Grid.Row="2"
                     Text="{Binding Result, Mode=OneWay}" IsReadOnly="True"/>
        </Grid>

        <UniformGrid Grid.Column="1" Rows="3" Columns="2">
            <Button Command="{Binding AddCommand}">
                <Image Source="pack://application:,,,/pictures/add.png" Stretch="Fill" />
            </Button>
            <Button Command="{Binding SubCommand}">
                <Image Source="pack://application:,,,/pictures/subtract.png" Stretch="Fill" />
            </Button>
            <Button Command="{Binding MulCommand}">
                <Image Source="pack://application:,,,/pictures/multiply.png" Stretch="Fill" />
            </Button>
            <Button Command="{Binding DivCommand}">
                <Image Source="pack://application:,,,/pictures/divide.png" Stretch="Fill" />
            </Button>
            <Button Command="{Binding NextCommand}">
                <Image Source="pack://application:,,,/pictures/next.png" Stretch="Fill" />
            </Button>
            <Button Command="{Binding ClearCommand}">
                <Image Source="pack://application:,,,/pictures/clear.png" Stretch="Fill" />
            </Button>
        </UniformGrid>
    </Grid>
</Window>

